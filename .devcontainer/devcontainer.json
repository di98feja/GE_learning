// .devcontainer/devcontainer.json
{
  "name": "GridEnforcer Integration Development",
  "dockerComposeFile": ["docker-compose.yml"],
  "service": "devcontainer",
  "workspaceFolder": "/workspace",

  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "configureZshAsDefaultShell": true,
      "installOhMyZsh": true
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installTools": true
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    }
  },

  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.flake8Enabled": true,
        "python.formatting.provider": "black",
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.black-formatter",
        "ms-python.flake8",
        "ms-python.mypy-type-checker",
        "redhat.vscode-yaml",
        "esbenp.prettier-vscode",
        "GitHub.copilot",
        "ms-vscode.vscode-json"
      ]
    }
  },

  "forwardPorts": [8123, 8124, 1883, 3306, 8080],
  "portsAttributes": {
    "8123": {
      "label": "Home Assistant (Dev)",
      "onAutoForward": "notify"
    },
    "8124": {
      "label": "Home Assistant (Legacy)",
      "onAutoForward": "silent"
    },
    "1883": {
      "label": "MQTT Broker",
      "onAutoForward": "silent"
    },
    "3306": {
      "label": "MariaDB",
      "onAutoForward": "silent"
    },
    "8080": {
      "label": "Adminer (DB Admin)",
      "onAutoForward": "silent"
    }
  },

  "postCreateCommand": "pip install -r requirements.txt && pip install -e .",
  "postStartCommand": "docker-compose -f deployment/dev/docker-compose.yml up -d",

  "remoteUser": "vscode"
}
